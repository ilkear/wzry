<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbs.dao.CommentDao">
  <resultMap id="commentMap" type="comment">
    <result column="commentId" property="commentId"/>
    <collection property="replyList" column="commentId"
                select="com.bbs.dao.ReplyDao.getReplyByCommentId"/>
  </resultMap>
  <select id="getCommentByArticleId" resultMap="commentMap">
    SELECT * FROM `bbs_comment_table` WHERE `articleId` = #{articleId}
  </select>
</mapper>